							<groupId>org-geonetwork-opensource</groupId>
							<artifactId>web-app</artifactId>
							<version>${project.version}</version>
							<scanPlaceholders>true</scanPlaceholders>
							<excludeFileNamesRegex>.*\.(gif|html|jar|jpg|js|mef|pdf|png|psd|txt|xsl)</excludeFileNamesRegex>
						</deployable-->
						<deployable>
							<name>pgds-war</name>
							<type>tomcat.War</type>
							<location>../web/target/geonetwork.war</location>
							<excludeFileNamesRegex>.*\.(gif|html|jar|jpg|js|mef|pdf|png|psd|txt|xsl)</excludeFileNamesRegex>
						</deployable>
					</deployables>
				</configuration>
			</plugin>
		</plugins>
	</build>
