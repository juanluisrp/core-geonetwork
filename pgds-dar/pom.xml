	<artifactId>pdok-pgds-dar</artifactId>
	<packaging>dar</packaging>
	<build>
		<plugins>
			<plugin>
				<groupId>com.xebialabs.deployit</groupId>
				<artifactId>maven-deployit-plugin</artifactId>
				<version>3.9.4</version>
				<extensions>true</extensions>
				<executions>
					<execution>
						<id>deployit-generate-package</id>
						<phase>package</phase>
						<goals>
							<goal>generate-deployment-package</goal>
						</goals>
					</execution>
					<execution>
						<id>deployit-plugin-deploy</id>
						<phase>deploy</phase>
						<goals>
							<goal>deploy</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<username>${deployit.username}</username>
					<password>${deployit.password}</password>
					<serverAddress>${deployit.server}</serverAddress>
					<deletePreviouslyDeployedDar>true</deletePreviouslyDeployedDar>
					<generateDeployedOnUpgrade>true</generateDeployedOnUpgrade>
					<applicationName>pdok/${project.artifactId}</applicationName>
					<environmentId>Environments/pdok-int/environment/pdok-geodatastore_int</environmentId>
					<deployables>
						<!--deployable>
							<name>pgds-war</name>
							<type>tomcat.War</type>
